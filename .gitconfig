[user]
  name = Jeff Care
  email = jeff.care@sas.com
[color]
  status = auto
  ui = auto
[push]
  default = upstream
[alias]
  # I frequently misspell "add" as "ass" (I did it again when writing this comment)
  #
  ass = add
  a = add
  ai = add --interactive

  b = branch
  bd = branch --delete
  bdr = push origin --delete

  cm = commit --message
  cma = commit --all --message

  co = checkout
  com = checkout master
  com9 = checkout master09

  d = diff
  ds = diff --staged
  dh = diff HEAD

  f = fetch
  fa = fetch --all
  fap = fetch --all --prune

  ls = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat

  s = status --long
  ss = status --short
  sv = status --verbose
[core]
  eol = lf
  autocrlf = input

[user]
  name = Jeff Care
  email = jeff.care@sas.com
[color]
  status = auto
  ui = auto
[push]
  default = upstream
[alias]
  # I frequently misspell "add" as "ass" (I did it again when writing this comment)
  #
  ass = add
  a = add
  ai = add --interactive

  b = branch
  bd = branch --delete
  bdr = push origin --delete

  cm = commit --message
  cma = commit --all --message

  co = checkout
  com = checkout master
  com9 = checkout master09

  d = diff
  dh = diff HEAD
  ds = diff --staged
  du = diff @{upstream}
  dp = diff @{upstream}..HEAD

  dt = difftool
  dth = difftool HEAD
  dts = difftool --staged
  dtu = difftool @{upstream}
  dtp = difftool @{upstream}..HEAD

  f = fetch
  fa = fetch --all --tags
  fap = fetch --all --tags --prune

  ls = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%aN | %cN]" --decorate --date=relative
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%aN | %cN]" --decorate --numstat

  s = status --long
  ss = status --short
  sv = status --verbose
[core]
  eol = lf
  autocrlf = input
[diff]
  tool = bc
[difftool]
  prompt = false
[difftool "bc"]
  cmd = /usr/local/bin/bcomp "$(cygpath -w ${LOCAL})" "${REMOTE}"
[merge]
  tool = bc
[mergetool "bc"]
  path = /usr/local/bin/bcomp
